{
  "name": "deployment",
  "version": "0.1.0",
  "bin": {
    "deployment": "bin/deployment.js"
  },
  "scripts": {
    "start": "npm install --legacy-peer-deps &&npm-run-all build-source build deploy",
    "build-source": "npm install --legacy-peer-deps && npm-run-all build:*",
    "build:authorizer": "cd ../../ts-common-authorizer/src/ && npm install",
    "build:discovery-services-list": "cd ../lambda/discovery-services-list/src && npm install && tsc --resolveJsonModule --esModuleInterop index.ts",
    "build:discovery-services-read": "cd ../lambda/discovery-services-read/src && npm install && tsc --resolveJsonModule --esModuleInterop index.ts",
    "build": "tsc",
    "clean": "rm -rf *.js && rm -rf *d.ts && rm -rf node_modules && && rm -rf cdk.out",
    "watch": "tsc -w",
    "test": "jest",
    "boot": "cdk bootstrap",
    "destroy": "cdk destroy",
    "deploy": "cdk deploy --require-approval never",
    "export": "aws apigatewayv2 export-api --output-type YAML  --specification OAS30 --no-include-extensions ./exportedApi/latest-api-definition.yaml"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.20",
    "esbuild": "^0.17.4",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.511.0",
    "@aws-sdk/lib-dynamodb": "^3.511.0",
    "aws-cdk-lib": "^2.124.0",
    "axios": "^1.6.7",
    "constructs": "^10.0.0",
    "fs": "^0.0.1-security",
    "source-map-support": "^0.5.21"
  }
}
